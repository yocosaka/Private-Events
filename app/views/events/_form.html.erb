<%= form_with(model: @event, local: true) do |f| %>
  <div class="field">
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :location %> <br>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :date %> <br>
    <%= f.datetime_field :date %>
  </div>
  <br>
  <br>
  <%= f.submit "Create an event" %>
<% end %>
