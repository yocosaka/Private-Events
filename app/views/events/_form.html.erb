<%= render "shared/errors", obj: @event %>

<div class="column is-one-third">
  <%= form_with(model: @event, local: true) do |f| %>
    <div class="field">
      <%= f.label :title, {class: "label"} %>
      <div class="control">
        <%= f.text_field :title, {class: "input"} %>
      </div>
    </div>

    <div class="field">
      <%= f.label :description, {class: "label"} %>
      <div class="control">
        <%= f.text_area :description, {class: "textarea"} %>
      </div>
    </div>

    <div class="field">
      <%= f.label :location, {class: "label"} %>
      <div class="control">
        <%= f.text_field :location, {class: "input"} %>
      </div>
    </div>

    <div class="field">
      <%= f.label :date, {class: "label"} %>
      <div class="control">
        <%= f.datetime_field :date, {class: "input"} %>
      </div>
    </div>

      <div class="field is-grouped">
        <div class="control">
          <%= f.submit btn_msg, class: 'button is-link'%>
        </div>
      </div>
  <% end %>
</div>
