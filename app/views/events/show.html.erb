<h1><%= @event.title  %></h1>
<p>Date: <%= @event.date %></p>
<p>Location: <%= @event.location %></p>
<p>Created by <%= link_to @event.creator.name, user_path(@event.creator) %></p>
<p>Attendees: </p>

<% if @event.attendees.any?%>
    <ul>
        <% @event.attendees.each do |attendee| %>
            <li><%= attendee.name %></li>
        <% end %>
    </ul>
<% end %>
<% if @event.date > Time.now && logged_in?%> 
    <%= form_with scope: :invite, url: event_invites_path(@event) do |f|%>
      <%= f.label :user %>
      <%= f.select :user, User.where.not(id: current_user.id).map{|user| user.name}.reject{|user| @event.attendees.include?(user)} %> 

      <%= f.submit "Invite" %>
    <% end %>
  <% end %> 
